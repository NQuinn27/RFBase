#content_head
  #ch-title
    %h1 News Items
  #ch-button
    %a{:href => new_post_path}
      %button.btn.btn-primary{:type => 'button'} New
.row
  .col-md-12
    %table.table.table-striped
      %thead.posts_head
        %tr
          %th ID
          %th Title
          %th Excerpt
          %th Created At
          %th
          %th
          %th
      %tbody
        - @posts.each do |post|
          %tr
            %td
              %a{:href => post_path(post)}= post.id
              %td= post.title
              %td= raw(HTML_Truncator.truncate(post.body, 10))
              %td= post.created_at.strftime('%b %d, %Y')
              %td= link_to 'Destroy', post_path(post), data: {:confirm => 'Are you sure?'}, :method => :delete
              %td= link_to 'Edit', edit_post_path(post)
              %td= link_to "More", post_path(post)
:javascript
  $("#posts_menu_item").toggleClass("active")
