<div id="content_head">
  <h1>News Items</h1>
</div>
<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Excerpt</th>
      <th>Created At</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <td><%= post.id %></td>
      <td>
        <%= post.title %>
      </td>
      <td>
        <%= raw(HTML_Truncator.truncate(post.body, 10)) %>
      </td>
      <td>
        <%= post.created_at.strftime('%b %d, %Y') %>
      </td>
      <td>
        <%= link_to 'Destroy', post_path(post),
            data: {:confirm => 'Are you sure?'}, :method => :delete %>
      </td>
      <td>
        <%= link_to 'Edit', post_path(post), :method => :edit %>
      </td>
      <td>
        <%= link_to "More", post_path(post) %>
      </td>
    <% end %>
  </tbody>
</table>
